                    <button id="dailyTableFilterButton" class="btn btn-primary ml-2">Filter</button>
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <div class="table-container"></div>
                        <table id="barChartTable" class="table table-bordered table-striped table-hover" width="100%" cellspacing="0">
                            <thead>
                                <th>Machine</th>
                                <th>Actual(Kg.)</th>
                                <th>Plan</th>
                                <th>MFG.No</th>
                                <th>ลูกค้า</th>
                                <th>Remark</th>
                                <th>ปัญหาที่เกิด</th>
                                <th>เวลาสูญเสีย(นาที)</th>
                                <th>Order</th>
                                <th>ยาว</th>
                                <th>SizeIn</th>
                                <th>SizeOut</th>
                                <th>Grade</th>
                                <th>Action</th>
                                <th>Details</th>
                            </tr>
                            </thead>
                            <tbody>

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">Production Data Month: BAR1 </h6>
            <div class="date-filter">
                <input type="month" id="monthYearPicker" class="form-control">
                <button id="tableFilterButton" class="btn btn-primary ml-2">Filter</button>
                <button id="exportProductionDataButton" class="btn btn-success ml-2">Export Production Data</button>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table id="productionTable" class="table table-bordered table-striped table-hover">
      
                </table>
            </div>
        </div>
